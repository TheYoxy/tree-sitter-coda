{
  "name": "tree-sitter-coda",
  "version": "0.1.0",
  "type": "commonjs",
  "description": "CODA (Coded Statement of Account)",
  "repository": "https://github.com/tree-sitter/tree-sitter-coda",
  "license": "MIT",
  "author": {
    "name": "Floryan Simar",
    "email": "floryan.simar@endevops.be",
    "url": "https://theyoxy.be/"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
